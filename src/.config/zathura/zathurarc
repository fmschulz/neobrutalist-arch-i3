# Neobrutalist theme for Zathura PDF viewer
# Stark black and white with bold borders

# General settings
set window-title-basename true
set selection-clipboard clipboard
set font "JetBrains Mono Bold 12"

# Neobrutalist color scheme
set default-bg              "#000000"
set default-fg              "#FFFFFF"

set statusbar-bg            "#000000"
set statusbar-fg            "#FFFFFF"

set inputbar-bg             "#000000"
set inputbar-fg             "#FFFFFF"

set notification-bg         "#000000"
set notification-fg         "#FFFFFF"

set notification-error-bg   "#FF0000"
set notification-error-fg   "#FFFFFF"

set notification-warning-bg "#f9b409"
set notification-warning-fg "#000000"

set highlight-color         "#f9b409"
set highlight-active-color  "#2a687a"

set completion-bg           "#000000"
set completion-fg           "#FFFFFF"

set completion-highlight-bg "#FFFFFF"
set completion-highlight-fg "#000000"

# Recolor settings for dark mode reading
set recolor-lightcolor      "#000000"
set recolor-darkcolor       "#FFFFFF"
set recolor                 false
set recolor-keephue         false

# Page settings
set page-padding 20
set statusbar-h-padding 20
set statusbar-v-padding 10

# Key mappings
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map i recolor
map p print